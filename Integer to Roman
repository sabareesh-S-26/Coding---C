char* intToRoman(int num) {
    int values[] =    {1000, 900, 500, 400, 100,  90,  50,  40,  10,   9,   5,   4,   1};
    char *symbols[] = {"M","CM","D","CD","C","XC","L","XL","X","IX","V","IV","I"};
    
    char *roman = (char*)malloc(20 * sizeof(char));
    if (!roman) return NULL;  
    roman[0] = '\0';
    
    int i = 0;
    while (num > 0) {
        while (num >= values[i]) {
            strcat(roman, symbols[i]);
            num -= values[i];
        }
        i++;
    }
    
    return roman;
}
