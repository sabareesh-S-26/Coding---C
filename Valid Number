bool isNumber(char* s) {
    int i = 0;
    int len = strlen(s);

    while (i < len && isspace(s[i])) i++;

    if (i < len && (s[i] == '+' || s[i] == '-')) i++;

    bool isNumeric = false; 

    while (i < len && isdigit(s[i])) {
        i++;
        isNumeric = true;
    }

    if (i < len && s[i] == '.') {
        i++;
        while (i < len && isdigit(s[i])) {
            i++;
            isNumeric = true;
        }
    }

    if (isNumeric && i < len && (s[i] == 'e' || s[i] == 'E')) {
        i++;
        isNumeric = false; // reset, exponent must have digits

        if (i < len && (s[i] == '+' || s[i] == '-')) i++;

        while (i < len && isdigit(s[i])) {
            i++;
            isNumeric = true;
        }
    }

    while (i < len && isspace(s[i])) i++;

    return isNumeric && i == len;
}
