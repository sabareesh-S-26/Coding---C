int* grayCode(int n, int* returnSize) {
    int size = 1 << n; // 2^n numbers
    *returnSize = size;
    int* result = (int*)malloc(size * sizeof(int));
    if (!result) return NULL; // check malloc success
    
    for (int i = 0; i < size; i++) {
        result[i] = i ^ (i >> 1);
    }
    
    return result;
}
